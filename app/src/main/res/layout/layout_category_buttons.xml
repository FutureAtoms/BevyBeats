<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_favorite"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/button_favorite"
        android:text="Favorite"
        android:textColor="#000000"
        android:drawableStart="@android:drawable/btn_star_big_on"
        android:drawablePadding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical|start"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_followed"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        android:stateListAnimator="@null"
        android:elevation="0dp"/>

    <Button
        android:id="@+id/btn_followed"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/button_followed"
        android:text="Followed"
        android:textColor="#000000"
        android:drawableStart="@android:drawable/ic_menu_myplaces"
        android:drawablePadding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical|start"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btn_favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:stateListAnimator="@null"
        android:elevation="0dp"/>

    <Button
        android:id="@+id/btn_most_played"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/button_most_played"
        android:text="Most Played"
        android:textColor="#000000"
        android:drawableStart="@android:drawable/ic_menu_recent_history"
        android:drawablePadding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical|start"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_downloaded"
        app:layout_constraintTop_toBottomOf="@+id/btn_favorite"
        android:stateListAnimator="@null"
        android:elevation="0dp"/>

    <Button
        android:id="@+id/btn_downloaded"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/button_downloaded"
        android:text="Downloaded"
        android:textColor="#000000"
        android:drawableStart="@android:drawable/ic_menu_save"
        android:drawablePadding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical|start"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/btn_most_played"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_followed"
        android:stateListAnimator="@null"
        android:elevation="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout> 