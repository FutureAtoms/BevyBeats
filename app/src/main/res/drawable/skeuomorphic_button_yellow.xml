<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button shadow -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="#80000000" />
        </shape>
    </item>
    
    <!-- Button main body -->
    <item android:bottom="3dp" android:left="0dp" android:right="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <gradient
                android:angle="270"
                android:startColor="#FFF599"
                android:centerColor="#FFEB3B"
                android:endColor="#E6D335"
                android:type="linear" />
            <stroke android:width="1dp" android:color="#40FFFFFF" />
        </shape>
    </item>
    
    <!-- Top highlight -->
    <item android:bottom="24dp" android:left="1dp" android:right="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" 
                     android:topLeftRadius="24dp" 
                     android:topRightRadius="24dp" />
            <gradient
                android:angle="270"
                android:startColor="#50FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list> 